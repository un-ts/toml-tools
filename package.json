{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "test-packages/*"
    ],
    "nohoist": [
      "**/prettier-plugin-toml"
    ]
  },
  "scripts": {
    "ci": "npm-run-all format:validate test",
    "test": "yarn workspaces run test",
    "format:fix": "prettier --write \"**/*.@(ts|js|json|md)\"",
    "format:validate": "prettier --list-different \"**/*.@(ts|js|json|md)\"",
    "release": "changeset publish",
    "prepare": "yarn-deduplicate -s fewer"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "chai-exclude": "^1.0.12",
    "husky": "^1.3.1",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "yarn-deduplicate": "^6.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
